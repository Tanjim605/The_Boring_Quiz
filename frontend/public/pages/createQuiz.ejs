<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="../../images/favicon/favicon-96.png">
    <link
      rel="stylesheet"
      href="../../styles/tailwind-dist/styles.css"
      type="text/css"
    />
    <script src="../../scripts/createQuiz.js" defer></script>

    <title>Create Quiz</title>
  </head>

  <body>
    <h1>Create Quiz</h1>
    <form id="quizForm">
      <label for="title">Quiz Title:</label>
      <input type="text" id="title" name="title" required /><br />

      <div id="questions"></div>

      <div>
        <br />
        <input type="radio" name="q_type" id="mcq" value="mcq" />
        <label for="mcq">MCQ</label>

        <input type="radio" name="q_type" id="tf" value="tf" />
        <label for="tf">True/False</label>

        <button onclick="addQuestion()">Add Question</button>
        <br />
        <br />
      </div>

      <button type="submit">Create Quiz</button>
    </form>
  </body>
</html>
