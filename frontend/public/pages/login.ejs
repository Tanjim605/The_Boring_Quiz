<!DOCTYPE html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="./styles/tailwind-dist/styles.css"
      type="text/css"
    />
    <script src="../scripts/login.js" defer></script>

    <title>Login</title>
  </head>

  <body class="h-screen bg-[#2FB54C] border">
    <div id="error-msg"></div>

    <div class="h-full w-full mr-auto flex">
      <form id="login_form" class="text-black bg-white border p-11 rounded-md">
        <div>
          <input
            type="radio"
            name="user"
            id="teacher"
            value="teacher"
            required
          />
          <label class="rounded-xl" for="teacher">Teacher</label>

          <input
            type="radio"
            name="user"
            id="student"
            value="student"
            required
          />
          <label for="student">Student</label>
        </div>
        <br />

        <div>
          <label for="email">Mail: </label>
          <input class="input input-bordered" type="text" name="email" id="email" required />
        </div>
        <br />

        <div>
          <label for="password">Password: </label>
          <input class="input input-bordered" type="password" name="password" id="password" required />
        </div>
        <br />

        <button
          class="btn btn-outline bg-green-600 text-white hover:bg-green-300"
          onclick="loginHandle()"
          type="submit"
        >
          Submit
        </button>
      </form>
    </div>
  </body>
</html>
